<section id="message">
  <div ng-controller="MessageController" class="l-constrained">
    <h1>Livre d'Or</h1>
    <div class="section-container c2-cols clearfix">
      <div class="description">
        <h2>Une pensée... ? Vous pouvez vous exprimer... ! :)</h2>

        <div class="group name-input">      
          <input type="text" ng-model="varname" required>
          <span class="highlight"></span>
          <span class="bar"></span>
          <label>Nom, Prénom</label>
        </div>

        <div ng-show="nameError">
          <div class="error-message">
            Entrez vos nom et prénom.
          </div>
        </div>

        <div class="group name-input">      
          <input type="text" ng-model="title" required>
          <span class="highlight"></span>
          <span class="bar"></span>
          <label>Titre</label>
        </div>

        <div ng-show="titleError">
          <div class="error-message">
            Entrez un titre.
          </div>
        </div>

        <div class="group textarea-great">
          <textarea class="form-control" placeholder="Votre message..." ng-model="message"></textarea>
          <span class="highlight"></span>
          <span class="bar"></span>
        </div>

        <div ng-show="nameError">
          <div class="error-message">
            Entrez votre message.
          </div>
        </div>

        <div ng-click="sendMessage()" class="button raised">
          <div class="center" fit>ENVOYER</div>
        </div>
      </div>
    </div>
  </div>
  <img class="bottom-arab5 opacarab" src="images/arabesque2b.png"></img>

</section>

<section id="ecritures" ng-controller="LivreDOrController">
  <div class="l-constrained">
    <p>
      <div class="center"> <img class="arabesqueverset" src="images/arabesque7a.png"></img>
      </div>
      <h3>Vos messages...</h3>
      <p>
        <div class="center"> <img class="arabesqueverset" src="images/arabesque7b.png"></img></div>
      </p>
      <div ng-repeat="message in messages track by message.ID" class="card" ng-class="'color'+chooseColor(message)">
        <h4 class="message-title">{{message.Titre}}</h4>
        <p class="message-text">{{message.MESSAGE}}</p>
        <p class="message-sign">{{message.NOM}}</p>
      </div>
    </div>
  </p>

</section>
