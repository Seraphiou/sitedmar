          <label class="codelong">Code Secret figurant sur le faire-part</label>
          <label class="codecourt">Code Secret figurant sur le faire-part</label>

        </div>
        <div class="row">
          <label for="">
            Afficher le code ?
            <input type="checkbox" ng-click="hideShowPassword()"/>
          </label>
        </div>
        <div ng-show="passwordError">
          <div class="error-message">
            Entrez le mot de passe.
          </div>
        </div>

        <div ng-click="sendConfirmation()" class="button raised">
          <div class="center" fit>CONFIRMER</div>
        </div>
      </div>
    </div>
  </div>
</section>

